{
    "name": "php-tuf/composer-stager-dev",
    "description": "Provides additional quality tools for Composer Stager development.",
    "license": "MIT",
    "type": "library",
    "require": {
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "rector/rector": "^0.17.5 || ^0.18.0 || ^0.19.0 || ^1.0.0",
        "thecodingmachine/phpstan-strict-rules": "^1.0",
        "wikimedia/composer-merge-plugin": "dev-master",
        "phpstan/phpstan-deprecation-rules": "^1.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "wikimedia/composer-merge-plugin": true
        },
        "vendor-dir": "../vendor"
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "../composer.json"
            ]
        }
    },
    "scripts": {
        "phpcbf": "phpcbf",
        "phpcs": "phpcs -s",
        "phpstan": [
            "phpstan clear-result-cache",
            "phpstan analyse"
        ],
        "rector": "rector"
    },
    "scripts-descriptions": {
        "phpcbf": "Automatically fixes standards violations where possible",
        "phpcs": "Checks code for standards compliance",
        "phpstan": "Analyzes code to find bugs",
        "rector": "Instantly upgrades and automatically refactors PHP code"
    },
    "scripts-aliases": {
        "phpcbf": [
            "cbf"
        ],
        "phpcs": [
            "cs"
        ],
        "phpstan": [
            "stan",
            "analyze"
        ]
    }
}
