{
    "name": "php-tuf/composer-stager-dev",
    "description": "Provides additional quality tools for Composer Stager development.",
    "license": "MIT",
    "type": "library",
    "require": {
        "infection/infection": "^0.29.9",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpro/grumphp-shim": "^2.9",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.5",
        "rector/rector": "^0.17.5 || ^0.18.0 || ^0.19.0 || ^1.0.0",
        "wikimedia/composer-merge-plugin": "dev-master"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "infection/extension-installer": true,
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true,
            "wikimedia/composer-merge-plugin": true
        },
        "vendor-dir": "../vendor"
    },
    "extra": {
        "grumphp": {
            "disable-plugin": true
        },
        "merge-plugin": {
            "include": [
                "../composer.json"
            ]
        }
    },
    "scripts": {
        "all": [
            "phpstan clear-result-cache",
            "grumphp run"
        ],
        "clear-var-dir": [
            "@composer dump-autoload",
            "phpstan clear-result-cache",
            "rm -r ../var/*/* &> /dev/null || true",
            "git checkout -- ../var"
        ],
        "fast": "(cd ../ && phpunit --testsuite=coverage --exclude-group=slow,windows_only)",
        "functional": "(cd ../ && phpunit --testsuite=functional --exclude-group=windows_only)",
        "infection": "infection --ansi",
        "open-code-coverage": "open $(pwd)/../var/phpunit/html-coverage/index.html || echo 'Run the \"test\" command to generate the coverage report.'",
        "phpcbf": "(cd ../ && phpcbf)",
        "phpcs": "(cd ../ && phpcs -s)",
        "phpstan": "grumphp run --tasks=phpstan",
        "rector": "rector",
        "static": "grumphp run --testsuite=static",
        "test": "(cd ../ && phpunit --exclude-group=windows_only)",
        "unit": "(cd ../ && phpunit --no-coverage --testsuite=unit --exclude-group=windows_only)"
    },
    "scripts-descriptions": {
        "all": "Runs all automated tests and static analysis tools",
        "clear-var-dir": "Clears all script caches and test fixtures in the \"var\" directory",
        "fast": "Runs only fast automated tests",
        "functional": "Runs functional tests",
        "infection": "Performs mutation testing",
        "open-code-coverage": "Opens the code coverage report generated by the \"test\" script (on macOS)",
        "phpcbf": "Automatically fixes standards violations where possible",
        "phpcs": "Checks code for standards compliance",
        "phpstan": "Analyzes code to find bugs",
        "rector": "Instantly upgrades and automatically refactors PHP code",
        "static": "Runs all static analysis tools",
        "test": "Runs automated tests",
        "unit": "Runs unit tests"
    },
    "scripts-aliases": {
        "clear-var-dir": [
            "cvd",
            "var"
        ],
        "infection": [
            "mutation"
        ],
        "open-code-coverage": [
            "cov"
        ],
        "phpcbf": [
            "cbf",
            "fix"
        ],
        "phpcs": [
            "cs"
        ],
        "phpstan": [
            "stan",
            "analyze"
        ]
    }
}
