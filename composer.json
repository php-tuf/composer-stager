{
    "name": "php-tuf/composer-stager",
    "description": "Stages Composer commands so they can be safely run on a production codebase.",
    "license": "MIT",
    "type": "library",
    "readme": "docs/README.md",
    "authors": [
        {
            "name": "Travis Carden",
            "email": "travis.carden@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/php-tuf/composer-stager",
    "support": {
        "issues": "https://github.com/php-tuf/composer-stager/issues",
        "source": "https://github.com/php-tuf/composer-stager"
    },
    "require": {
        "php": ">=8.1.0",
        "ext-json": "*",
        "symfony/filesystem": "^6.2 || ^7.0",
        "symfony/process": "^6.4.14 || ^7.1.7",
        "symfony/translation-contracts": "^3.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpspec/prophecy": "^1.17",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5.19",
        "slevomat/coding-standard": "^8.13",
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/config": "^6.3",
        "symfony/dependency-injection": "^6.3",
        "symfony/yaml": "^6.3"
    },
    "conflict": {
        "symfony/process": ">=6 <6.4.14 || >=7 <7.1.7",
        "symfony/symfony": ">=6 <6.4.14 || >=7 <7.1.7"
    },
    "suggest": {
        "symfony/dependency-injection": "For dependency injection",
        "symfony/translation": "For internationalization tools"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTuf\\ComposerStager\\": "tools/PHPCS/",
            "PhpTuf\\ComposerStager\\PHPStan\\": "tools/PHPStan/",
            "PhpTuf\\ComposerStager\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "2.x-dev"
        }
    },
    "scripts": {
        "all": [
            "@static",
            "@tests"
        ],
        "clear-var-dir": [
            "@composer dump-autoload",
            "phpstan clear-result-cache",
            "rm -r var/*/* &> /dev/null || true",
            "git checkout -- var"
        ],
        "compatibility": "phpunit --testsuite=compatibility",
        "dox": "phpunit --testdox --color=always --exclude-group=windows_only",
        "fast": "phpunit --exclude-group=slow,windows_only",
        "functional": "phpunit --testsuite=functional --exclude-group=windows_only",
        "open-code-coverage": "open $(pwd)/var/phpunit/html-coverage/index.html || echo 'Run the \"test\" command to generate the coverage report.'",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs -s",
        "phpstan": [
            "phpstan clear-result-cache",
            "phpstan analyse"
        ],
        "static": [
            "composer dump-autoload --strict-psr --dry-run",
            "@phpcs",
            "@phpstan"
        ],
        "tests": "phpunit --testsuite=all --exclude-group=windows_only",
        "unit": "phpunit --testsuite=unit --exclude-group=windows_only"
    },
    "scripts-descriptions": {
        "all": "Runs all automated tests and static analysis tools",
        "clear-var-dir": "Clears all script caches and test fixtures in the \"var\" directory",
        "compatibility": "Checks Composer version compatibility with major client projects",
        "dox": "Runs tests with TestDox output",
        "fast": "Runs only fast automated tests",
        "functional": "Runs functional tests",
        "open-code-coverage": "Opens the code coverage report generated by the \"test\" script (on macOS)",
        "phpcbf": "Automatically fixes standards violations where possible",
        "phpcs": "Checks code for standards compliance",
        "phpstan": "Analyzes code to find bugs",
        "static": "Runs all static analysis tools",
        "tests": "Runs automated tests",
        "unit": "Runs unit tests"
    },
    "scripts-aliases": {
        "clear-var-dir": [
            "cv",
            "var"
        ],
        "compatibility": [
            "compat"
        ],
        "open-code-coverage": [
            "cov"
        ],
        "phpcbf": [
            "cbf",
            "fix"
        ],
        "phpcs": [
            "cs"
        ],
        "phpstan": [
            "stan",
            "analyze"
        ],
        "tests": [
            "test"
        ]
    }
}
